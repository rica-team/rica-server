   "id": "intro",
   "metadata": {},
   "source": [
    "# RiCA Demo Notebook\\n",
    "This notebook demonstrates the basic functionality of the RiCA framework."
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "id": "install",
   "metadata": {},
   "outputs": [],
   "source": "!pip install .[pt]"
  },
  {
   "cell_type": "code",
   "id": "login",
   "metadata": {},
   "source": [
    "from huggingface_hub import login\\n",
    "login()"
   ],
   "outputs": [],
   "execution_count": null
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "id": "imports",
   "metadata": {},
   "outputs": [],
   "source": [
    "import asyncio\\n",
    "import json\\n",
    "import logging\\n",
    "import ast\\n",
    "from rica.adapters import transformers_adapter as tf\\n",
    "from rica.core.application import RiCA"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "id": "setup",
   "metadata": {},
   "outputs": [],
   "source": [
    "# Configure logging\\n",
    "logging.basicConfig(level=logging.INFO)\\n",
    "logger = logging.getLogger(__name__)\\n",
    "\\n",
    "# 1. Create a RiCA application instance.\\n",
    "app = RiCA(\\"demo.sys\\", description=\\"System utilities for demo purposes\\")"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "id": "tool_registration",
   "metadata": {},
   "outputs": [],
   "source": [
    "# 2. Register tool routes with the application instance.\\n",
    "@app.route(\\"/exec\\", background=False, timeout=5000)\\n",
    "async def _sys_python_exec(input_):\\n",
    "    \\\"\\\"\\\"\\n",
    "    A tool to execute a single line of Python code safely.\\n",
    "    \\n",
    "    Input Schema:\\n",
    "    {\\n",
    "        \\"code\\": \\"string - Python expression to evaluate\\"\\n",
    "    }\\n",
    "    \\n",
    "    Output Schema:\\n",
    "    {\\n",
    "        \\"result\\": \\"string - Evaluation result\\",\\n",
    "        \\"error\\": \\"string - Error message (if any)\\"\\n",
    "    }\\n",
    "    \\\"\\\"\\\"\\n",
    "    try:\\n",
    "        code = input_.get(\\"code\\", \\"\\")\\n",
    "        if not code:\\n",
    "            return {\\"error\\": \\"No code provided\\"}\\n",
    "        \\n",
    "        if len(code) > 100:\\n",
    "            return {\\"error\\": \\"Code too long (max 100 chars)\\"}\\n",
    "        \\n",
    "        result = ast.literal_eval(code)\\n",
    "        return {\\"result\\": str(result)}\\n",
    "    except (ValueError, SyntaxError) as e:\\n",
    "        return {\\"error\\": f\\"Invalid expression: {str(e)}\\"}\\n",
    "    except Exception as e:\\n",
    "        logger.error(f\\"Execution error: {e}\\", exc_info=True)\\n",
    "        return {\\"error\\": f\\"Execution failed: {str(e)}\\"}"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "id": "executor_creation",
   "metadata": {},
   "outputs": [],
   "source": [
    "# 3. Create the Executor.\\n",
    "rt = tf.TransformersExecutor(model_name=\\"Qwen/Qwen3-0.6B\\")"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "id": "callbacks",
   "metadata": {},
   "outputs": [],
   "source": [
    "# 4. Register callbacks.\\n",
    "@rt.token_generated\\n",
    "def _on_token(token: str):\\n",
    "    print(token, end=\\"\\", flush=True)\\n",
    "\\n",
    "@rt.trigger\\n",
    "def _on_response(response_payload: any):\\n",
    "    print(\\"\\\\n\\\\n--- USER-FACING RESPONSE ---\\")\\n",
    "    if isinstance(response_payload, list):\\n",
    "        for item in response_payload:\\n",
    "            if item.get(\\"type\\") == \\"text\\":\\n",
    "                print(item.get(\\"content\\", \\"\\"))\\n",
    "    else:\\n",
    "        print(json.dumps(response_payload, indent=2))\\n",
    "    print(\\"----------------------------\\\\n\\")"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "id": "main_logic",
   "metadata": {},
   "outputs": [],
   "source": [
    "async def main():\\n",
    "    print(\\"--- Starting RiCA Demo ---\\")\\n",
    "\\n",
    "    await rt.initialize()\\n",
    "    await rt.install(app)\\n",
    "    rt.run()\\n",
    "\\n",
    "    await rt.insert(\\n",
    "        'Please calculate 123*456 using demo.sys/exec. '\\n",
    "        'Think step-by-step about what you need to do, and then use the rica.response tool to give me the final answer.'\\n",
    "    )\\n",
    "\\n",
    "    await rt.wait()\\n",
    "\\n",
    "    print(\\"\\\\n\\\\n--- Final Context ---\\")\\n",
    "    print(rt.context)\\n",
    "    print(\\"---------------------\\")\\n",
    "\\n",
    "    await rt.destroy()"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "id": "run_main",
   "metadata": {},
   "outputs": [],
   "source": [
    "await main()"
   ]
  }
 ],
